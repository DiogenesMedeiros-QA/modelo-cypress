{
  "name": "modelo-cypress",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:mochawesome": "cypress run --reporter mochawesome --reporter-options reportDir=reports/mochawesome,overwrite=false,html=true,json=true",
    "test:allure": "cypress run --reporter @shelex/cypress-allure-plugin",
    "allure:serve": "allure generate --clean allure-results -o allure-report && allure open allure-report",
    "test:ci": "npm run test:mochawesome"
  },
  "devDependencies": {
    "cypress": "^15.9.0",
    "allure-commandline": "^2.13.8",
    "mochawesome": "^7.1.3",
    "cypress-multi-reporters": "^1.4.0",
    "pg": "^8.10.0",
    "mysql2": "^3.3.0"
  }
}
